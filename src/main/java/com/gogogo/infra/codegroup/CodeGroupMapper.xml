<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.gogogo.infra.codegroup.CodeGroupMapper">		

    <resultMap id="resultMapObj" type="com.gogogo.infra.codegroup.CodeGroup"></resultMap>
    
    <sql id="abc">
    	icfgSeq
    	, ifcgName
    	, ifcgDelNy
    </sql>
    
    <sql id ="selectCommon">
   		FROM    
	    	ifcgCodeGroup
		WHERE 1=1
			<if test="shKeyword != null and !shKeyword.equals('')">AND name LIKE CONCAT('%',#{shKeyword},'%')</if>
    </sql>
    
    <select id="selectOneCount" resultType="Integer">
		SELECT count(*)
		<include refid="selectCommon" />
	</select>
	
	<select id="selectList" resultMap="resultMapObj">
		SELECT aa.* FROM (   	
	   		SELECT
				<include refid="abc" />
	   			<include refid="selectCommon" />
		) aa
		LIMIT #{rowNumToShow} OFFSET #{startRnumForMysql}	   			
   	</select>

   	<select id="selectOne" resultMap="resultMapObj">
   		SELECT 
   			<include refid="abc" />
   		FROM
   			ifcgCodeGroup
		WHERE 1=1
			AND ifcgSeq = #{ifcgSeq}	
   	</select>   
	
   <update id="update">
        UPDATE 
        	ifcgCodeGroup
        SET 
        	ifcgName = #{ifcgName}
        WHERE 
        	ifcgSeq = #{ifcgSeq}
    </update>
	
   <delete id="delete">
        DELETE 
        FROM	
        	ifcgCodeGroup 
        WHERE	
        	ifcgSeq = #{ifcgSeq}
   </delete>
    
   <insert id="insert">
       INSERT INTO ifcgCodeGroup(
       	ifcgName
       	,ifcgDelNy
       ) VALUES (
       	#{ifcgName}
       	,0
       )
	</insert>
   		
    <update id="uelete">
        UPDATE 
        	ifcgCodeGroup
        SET
        	ifcgDelNy = "1"
       WHERE  1=1          
       AND	ifcgSeq = #{ifcgSeq}
    </update>
    
</mapper>