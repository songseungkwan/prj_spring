<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <!-- 	 전체 매퍼중에서 유일한 값을 사용하여야 한다.
     해서 관계적으로 해당 파일의 패스와 파일이름 (확장자 제외)
     그리고 dao에서 namespace와 일치하여야 한다. -->
	<mapper namespace="com.mycompany.app.infra.modules.competition.CompetitionMapper">		
							
										<!-- 	select 결과를 받을 객체 -->
    <resultMap id="resultMapObj" type="com.mycompany.app.infra.modules.competition.Competition"></resultMap>
    
        <sql id ="selectCommon">
	   		FROM    
		    	competition a
	
			WHERE 1=1 
			<if test="name != null and !name.equals('')">AND name LIKE CONCAT('%',#{name},'%')</if>
	
	    </sql>
    
     <sql id="selectCompetition">
    	a.seq
    	, a.type
    	, a.title
    	, a.descr
    	, a.ytbLink
    	, a.regDatetime
    	, a.contents
    	, a.delNy
    </sql>
    
    	<select id="selectOne" resultMap="resultMapObj">
	
			SELECT
				<include refid="selectCompetition" />
		    	<include refid="selectCommon" />
		    AND a.seq = #{seq}
		    
		</select>
	
	   	<select id="selectOneCount" resultType="Integer">
	   	
			SELECT count(*)
			<include refid="selectCommon" />
			
		</select>
    
		<select id="selectList" resultMap="resultMapObj">
		
			SELECT
				<include refid="selectCompetition" />
		    	<include refid="selectCommon" />
		    
		</select>
	
		<insert id="insert">
		
		    insert into `competition` (
	    	 type
	    	 , title
	    	 , descr
	    	 , ytbLink
	    	 , contents
	    	 , delNy
	
			) values (
				#{type}
				,#{title}
				,#{descr}
				,#{ytbLink}
				,#{contents}
				,0
			)
			<selectKey resultType="String" keyProperty="seq" order="AFTER">
				SELECT last_insert_id()
			 </selectKey>
			 
	    </insert>
    
	    <update id="update">
	    
	        UPDATE 
	        	competition
	        SET 
	        	type = #{type},
	        	title = #{title},
		    	descr= #{descr},
		    	ytbLink= #{ytbLink},
		    	contents= #{contents},
		    	delNy= #{delNy}
	
	        WHERE 
	        	seq = #{seq}
	        	
		</update>
	
		<delete id="delete">
		
	        	DELETE FROM 
	    		competition
			WHERE
				seq = #{seq}
				
		</delete>
	    
	    <update id="uelete">
	    
	   		UPDATE 
	    		competition
			SET 
				delNy = 1
			WHERE 
				seq = #{seq}
				
	    </update>
    
    
    
    </mapper>
    
